@using CarInsurance.ViewModels
@model List<InsureeVm>

<!--Creates card object to display insurees to admin-->
<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Insurees</h5>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email Address</th>
                        <th>Quote</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var insureeVm in Model)
                    {
                        <tr>
                            <td>@insureeVm.FirstName</td>
                            <td>@insureeVm.LastName</td>
                            <td>@insureeVm.EmailAddress</td>
                            <td>@insureeVm.Quote</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

